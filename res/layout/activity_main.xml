<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0" >

    <LinearLayout
        android:id="@+id/container_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0e0e0"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/from_rl"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginTop="20dip"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/from_tv"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="10dip"
                android:gravity="center_vertical"
                android:text="From" />

            <EditText
                android:id="@+id/from_et"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="10dip"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:textColor="#9e9e9e"
                android:textColorHint="#bdbdbd"
                android:textCursorDrawable="@null"
                android:hint="Departing from"
                android:visibility="gone" />

          
        </RelativeLayout>
		  <View android:id="@+id/from_to_divider"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#bdbdbd" />
        <RelativeLayout
            android:id="@+id/to_rl"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/to_tv"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="10dip"
                android:gravity="center_vertical"
                android:text="To" />

            <EditText
                android:id="@+id/to_et"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="10dip"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:textColor="#9e9e9e"
                android:textColorHint="#bdbdbd"
                android:textCursorDrawable="@null"
                android:hint="Arriving at"
                android:visibility="gone" />
        </RelativeLayout>


            <TextView
                android:id="@+id/time_tv"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginTop="20dip"
                android:paddingLeft="10dip"
            	android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:text="2014-07-25 14:00" />

            <View android:id="@+id/time_way_divider"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#bdbdbd" />

            <TextView
                android:id="@+id/way_tv"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:paddingLeft="10dip"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:text="Return" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginTop="20dip"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="Tienfeek" />

        <com.tien.view.CircularProgressButton
            android:id="@+id/search_btn"
            android:layout_width="300dip"
            android:layout_height="48dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cpb_textComplete="Finish"
            app:cpb_textError="error"
            app:cpb_textIdle="Search" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/edit_mode_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dip"
        android:background="#00FFFFFF"
        android:visibility="invisible" />

</FrameLayout>